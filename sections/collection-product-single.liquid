<div class="collection collection1">
  <div class="container">
    <div class="row">
     {%- for product in section.settings.collection.products limit: section.settings.total_products -%}
      <div class="{{ section.settings.xxl_col }} {{ section.settings.xl_col }} {{ section.settings.lg_col }} {{ section.settings.sm_col }}">
        <div class="collection1__collection-item">
          {% assign opacity = section.settings.opacity | divided_by: 100.00 %}
          <div class="collection1__product-img collection1__product-img--{{section.settings.image_fit}} collection1__product-img--{{section.settings.container_shape}}" style="background-color: {{ section.settings.background | color_modify: 'alpha', opacity }}">
            {% comment %} <div class="collection1__heart">
              <i class="far fa-heart"></i>
            </div> {% endcomment %}
            {%- if product.images[0] != blank -%}
              <a href="{{product.url}}" class="img-link">
              <img
                srcset="{%- if product.images[0].width >= 165 -%}{{ product.images[0] | img_url: '165x' }} 165w,{%- endif -%}
                  {%- if product.images[0].width >= 360 -%}{{ product.images[0] | img_url: '360x' }} 360w,{%- endif -%}
                  {%- if product.images[0].width >= 535 -%}{{ product.images[0] | img_url: '535x' }} 535w,{%- endif -%}
                  {%- if product.images[0].width >= 750 -%}{{ product.images[0] | img_url: '750x' }} 750w,{%- endif -%}
                  {%- if product.images[0].width >= 1070 -%}{{ product.images[0] | img_url: '1070x' }} 1070w,{%- endif -%}
                  {%- if product.images[0].width >= 1500 -%}{{ product.images[0] | img_url: '1500x' }} 1500w,{%- endif -%}
                  {%- if product.images[0].width >= 1600 -%}{{ product.images[0] | img_url: '2000x' }} 2000w,{%- endif -%}"
                src="{{ product.images[0] | img_url: '1500x' }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 2000px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ product.images[0].alt | escape }}"
                loading="lazy"
                width="{{ product.images[0].width }}"
                height="{{ product.images[0].height }}"
                class="hero1__bg"
              >
              </a>
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          <div class="collection1__product-info">
            <div class="collection1__product-details">
              {%- if section.settings.show_title == true -%}
                <span class="collection1__product-title">{{ product.title }}</span>
              {%- endif -%}

              {%- if section.settings.show_price == true -%}
                <span class="collection1__product-price">${{ product.price }}</span>
              {%- endif -%}
            </div>
           
            {% comment %} {% for variant in product.variants %}
              <div class="collection1__colors">
                {% for color in variant.option2 %}
                <div class="collection1__color" style="background-color: {{ variant.option2 }};"></div>
                {% endfor %}
              </div>
            {% endfor %} {% endcomment %}

            {% assign options = '' %}
            {% for variant in product.variants %}
                {% assign options = options | append: ',' | append: variant.option2 %}
            {% endfor %}
            {% assign options = options | remove_first: ',' | split: ',' | uniq %}
            <div class="collection1__colors">
            {% for option in options %}
              <div class="collection1__color" style="background-color: {{ option }};"></div>
            {% endfor %}
            </div>
          </div>
        </div>
      </div>

     {%- endfor -%}
    </div>
  </div>
</div>


